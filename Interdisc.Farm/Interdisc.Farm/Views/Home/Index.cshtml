@model List<ProductGroupModel>
@{
    string GetGroupImageUrl(ProductGroupModel group) => $"/images/" + $"{group.ProductGroupName.ToLower().Replace(' ', '-')}.jpg";
}
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="hero">
    <div class="video-container">
        <video loop src="~/images/cottonbro.mp4" autoplay poster="~images/cottenbro.jpg"></video>
        <img src="~/images/cottenbro.jpg" />
    </div>
    <div class="pageHeading">
        <h1><img class="logo" src="~/images/farmfair-logo1.svg" alt="farmfair"></h1>
        <h3 class="description">Get fresh excess produce and meats directly from the farm</h3>
    </div>

</div>

<div class="gradSectionSolid"></div>
    <section id="categories">

        <div class="grid-category">
            @foreach (var group in Model)
            {
            <div class="card">
                <a asp-action="Category" asp-controller="Product" asp-route-id="@group.ProductGroupModelId">
                    <img class="cat-overlay" src="@GetGroupImageUrl(group)"/>
                    <p class="cat-overlay">
                        @group.ProductGroupName
                    </p>
                </a>
            </div>
            }

        </div>

    </section>

