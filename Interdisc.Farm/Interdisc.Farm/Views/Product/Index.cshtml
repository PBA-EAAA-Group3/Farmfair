@model Tuple<List<ProductGroupModel>, List<ProductModel>>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
             Product Group
            </th>
            <th>
              Product Name
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item2) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroup.ProductGroupName)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
                <img src="~/images/@item.ProductName+".jpg" />
            </td>
         
            <td>
                <a asp-action="Index" asp-route-id="@item.ProductModelId">Add to basket</a> 
            </td>
        </tr>
}
    </tbody>
</table>
